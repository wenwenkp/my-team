<%- include('../partials/header') %>

<%- include('../partials/subNav') %>

<% if(leader) { %>
    <form action="/teams/<%= team.id %>/schedule" method="POST">
        <br>
        Team: <input type="text" name="team">
        Time: <input type="datetime-local" name="time">
        Address: <input type="text" name="address">
        <input type="submit" value="Create">
    </form>
<% }; %>


<table>
    <thead>
        <th>Team</th>
        <th>Date</th>
        <th>Location</th>
    </thead>
    <tbody>
<% team.matches.forEach((match)=>{ %>
        <tr>
            <td><%= match.team %></td>
            <td><%= match.time %></td>
            <td><%= match.address %></td>
            <td>
        <% if(leader) { %>
                <form action="/teams/<%= team.id %>?_method=DELETE" method="POST">
                    <input type="submit" value="delete">
                </form>
<% }; %>

            </td>
        </tr>
<% }) %>
    </tbody>
</table>


<%- include('../partials/footer') %>
