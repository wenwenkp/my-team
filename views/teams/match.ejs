<%- include('../partials/header') %>

<div class="mx-auto mt-5 container" style="width: 800px;">
    <!-- header -->
        <div class="row">
                <div class="col-3">
                    <% if(user.teamId) { %>
                        <% if(user.teamId == team.id) { %>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#leaveTeamModal">
                            <% if(user.isLeader) { %>
                                Disband Team
                            <% }else{ %>
                                Leave Team
                            <% } %>
                    </button> 
                        <% } %>
                    <% } %>
                </div>
                <div class="col-6">  
                </div>
                <div class="col-3">
                    <a href="/teams" class="btn btn-outline-dark" role="button" aria-pressed="true">Team List</a>
                </div>
            </div>
        
        <hr>
        <!-- team info -->
        <div class="container">
    
            <div class="row">
                <div class="col-10">  
                    <div class="row">                               
                        <h1>Profile</h1>
                    </div>
                    <div class="row">
                        Team Name: <%= team.name %>
                    </div>
                    <div class="row">
                        
                        <!-- schedule table -->
                        <table class="table">
                                <thead class="thead-light">
                                  <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Team</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Location</th>
                                    <% if(user.isLeader) { %>
                                    <% if(user.teamId == team.id) { %>
                                        <th scopt="col">
                                        </th>
                                    <% }; %>
                                    <% }; %>
                                  </tr>
                                </thead>
                                <tbody>

                                <% team.matches.forEach((m, idx)=>{ %>
                                  <tr>
                                    <th scope="row"><%=  idx + 1 %></th>
                                    <td><%= m.team %></td>
                                    <td><%= m.time %></td>
                                    <td><%= m.address %></td>
                                    <td>
                                        <% if(user.isLeader) { %>
                                        <% if(user.teamId == team.id) { %>
                                        <form action="/teams/matches/<%= m._id %>?_method=DELETE" method="POST">
                                            <input type="submit" value="Delete" class="delete">
                                        </form>
                                        <% }; %>
                                        <% }; %>
                                    </td>
                                  </tr>
                                <% }) %>

                                </tbody>
                              </table>
                    </div>
                    <% if(user.isLeader) { %>
                        <% if(user.teamId === team.id) { %>
                    <div class="row">
                        <button type="button" class="btn btn-outline-dark" data-toggle="modal" data-target="#addMatchModal">
                            Add Match
                        </button>
                    </div>
                        <% }; %>
                    <% }; %>
                        
                </div>
                <div class="col-1"></div>
                <div class="col-1">
                    <div class="row">
                    <!-- team logo -->
                        <img src="<%= user.avatar %>" alt="player avatar" class="self-avatar">
                    </div>
                    <div class="row">
                    <!-- buttons -->
                        <a href="/teams/<%= team.id %>" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">Team Info</a>
                    </div>
                    <div class="row">
                    <!-- buttons -->
                        <a href="#" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">Schedule</a>
                    </div>
                    <div class="row">
                    <!-- buttons -->
                    <% if(user.teamId) { %>
                        <% if(user.teamId == team.id) { %>                    
                        <a href="#" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">Announcements</a>
                        <% } %>
                    <% } %>
                    </div>
                </div>
            </div>
    
        </div>
    </div>

<!-- Edit Team Modal -->
<div class="modal fade" id="addMatchModal" tabindex="-1" role="dialog" aria-labelledby="addMatchModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <form action="/teams/<%= user.teamId %>?_method=PUT" method="POST">
    
                    <div class="modal-header">
                        <h5 class="modal-title" id="addMatchModalTitle">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
    
                    <div class="modal-body">
                        <!-- <div class="col-8">   -->
                            <div class="form-group">
                                <label for="team" class="col-form-label">Team:</label>
                                <input type="text" class="form-control" name="team">
                            </div>
                            <div class="form-group">
                                <label for="time" class="col-form-label">Date / Time</label>
                                <input type="datetime-local" class="form-control" name="time">
                            </div>
                            <div class="form-group">
                                <label for="address" class="col-form-label">Location</label>
                                <input class="form-control" name="address">
                            </div>
                        <!-- </div> -->
                    </div>
    
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
    
                </form>
            </div>
        </div>
    </div>

      
      <!-- Leave Team Modal -->
      <div class="modal fade" id="leaveTeamModal" tabindex="-1" role="dialog" aria-labelledby="leaveTeamModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <form action="/players/leave?_method=PUT" method="POST">
                <div class="modal-header">
                <h5 class="modal-title" id="leaveTeamModalTitle">Leave My Team</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body">
                Are you sure you want to leave?
                </div>
                <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-danger">Leave</button>
                </div>
            </form>
          </div>
        </div>
      </div>

<%- include('../partials/footer') %>
