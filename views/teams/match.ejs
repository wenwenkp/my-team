<%- include('../partials/header') %>
<%- include('../partials/secondHeader') %>

        <!-- team info -->
        <div class="container">
    
            <div class="row">
                <div class="col-10">  
                    <div class="row">                               
                        <h1>
                                <%= team.name %>

                        </h1>
                    </div>
                    <div class="row mt-4 team-header">
                        

                        <% if(user.isLeader) { %>
                            <% if(user.teamId === team.id) { %>
                            <button type="button" class="btn btn-outline-dark mr-4" data-toggle="modal" data-target="#addMatchModal">
                                Add Match
                            </button>
                            <% }; %>
                        <% }; %>
                        <h4>
                            Schedule
                            </h4>
                    </div>
                    <div class="row mt-4">
                        
                        <!-- schedule table -->
                        <div class="col-11">
                             
                        <table class="table table-striped table-hover mt-4">
                                <thead class="thead-dark">
                                  <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Team</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Location</th>
                                    <% if(user.isLeader) { %>
                                    <% if(user.teamId == team.id) { %>
                                        <th scope="col">
                                        </th>
                                    <% }; %>
                                    <% }; %>
                                  </tr>
                                </thead>
                                <tbody>

                                <% team.matches.forEach((m, idx)=>{ %>
                                  <tr>
                                    <th scope="row"><%=  idx + 1 %></th>
                                    <td><%= m.team %></td>
                                    <td><%= m.time.toLocaleString() %></td>
                                    <td><%= m.address %></td>
                                        <% if(user.isLeader) { %>
                                        <% if(user.teamId == team.id) { %>
                                    <td>

                                        <form action="/matches/<%= m._id %>?_method=DELETE" method="POST">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </td>

                                        <% }; %>
                                        <% }; %>
                                  </tr>
                                <% }) %>

                                </tbody>
                        </table>
                    </div>

                    </div>
                        
                </div>

                <%- include('../partials/subNav') %>


            </div>
    
        </div>
    </div>

<!-- add match Modal -->
<div class="modal fade" id="addMatchModal" tabindex="-1" role="dialog" aria-labelledby="addMatchModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <form action="/teams/<%= user.teamId %>/matches" method="POST">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addMatchModalTitle">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
    
                    <div class="modal-body">
                            <div class="form-group">
                                <label for="team" class="col-form-label">Team:</label>
                                <input type="text" class="form-control" name="team">
                            </div>
                            <div class="form-group">
                                <label for="time" class="col-form-label">Date / Time</label>
                                <input type="datetime-local" class="form-control" name="time">
                            </div>
                            <div class="form-group">
                                <label for="address" class="col-form-label">Location</label>
                                <input class="form-control" name="address">
                            </div>
                    </div>
    
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
    
                </form>
            </div>
        </div>
    </div>

      
      <!-- Leave Team Modal -->
      <div class="modal fade" id="leaveTeamModal" tabindex="-1" role="dialog" aria-labelledby="leaveTeamModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <form action="/players/leave?_method=PUT" method="POST">
                <div class="modal-header">
                <h5 class="modal-title" id="leaveTeamModalTitle">Leave My Team</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body">
                Are you sure you want to leave?
                </div>
                <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-danger">Leave</button>
                </div>
            </form>
          </div>
        </div>
      </div>

<%- include('../partials/footer') %>
