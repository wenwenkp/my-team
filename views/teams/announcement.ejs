<%- include('../partials/header') %>


<div class="mx-auto mt-5 container" style="width: 800px;">
        <!-- header -->
            <div class="row">
                    <div class="col-3">
                        <% if(user.teamId) { %>
                            <% if(user.teamId == team.id) { %>
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#leaveTeamModal">
                                <% if(user.isLeader) { %>
                                    Disband Team
                                <% }else{ %>
                                    Leave Team
                                <% } %>
                        </button> 
                            <% } %>
                        <% } %>
                    </div>
                    <div class="col-6">  
                    </div>
                    <div class="col-3">
                        <a href="/teams" class="btn btn-outline-dark" role="button" aria-pressed="true">Team List</a>
                    </div>
                </div>
            
            <hr>
            <!-- team info -->
        <div class="container">
    
                <div class="row">
                    <div class="col-10">  
                        <div class="row">                               
                            <h1>Profile</h1>
                        </div>
                        <div class="row">
                            Team Name: <%= team.name %>
                        </div>
                            <% if(user.isLeader) { %>
                                <% if(user.teamId === team.id) { %>
                            <div class="row">
                                <button type="button" class="btn btn-outline-dark" data-toggle="modal" data-target="#addAnnouncementModal">
                                    Add Announcement
                                </button>
                            </div>
                                <% }; %>
                            <% }; %>
                        <div class="row">
                            
                            <!-- announcement table -->

                            <% if(user.teamId === team.id) { %>
                                <% team.announcements.forEach((p)=>{ %>
                                <div class="card">
                                    <div class="card-header">
                                        <%= p.time %>
                                    </div>
                                    <div class="card-body">
                                        <h6 class="card-title"><%= p.title %></h6>
                                        <p class="card-text">
                                            <%= p.content %>
                                        </p>
                                        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                                            Comments
                                        </button>
                                        <% if(user.isLeader) { %>
                                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteAnnouncementModal">
                                            Delete
                                        </button>
                                        <% }; %>
                                    </div>
                                    <div class="collapse" id="collapseExample">
                                            <div class="card card-body">
                                            <% p.comments.forEach((c)=>{ %>
                                                <h6>At <%= c.time %>  By <%= c.author %></h6>
                                                <p><%= c.text %></p>
                                            <% }); %>
                                            </div>
                                        </div>
                                </div>
                                
                                <% }); %>
                            <% } %>
                        </div>
                        
                            
                    </div>
                    <div class="col-1"></div>
                    <div class="col-1">
                        <div class="row">
                        <!-- team logo -->
                            <img src="<%= user.avatar %>" alt="player avatar" class="self-avatar">
                        </div>
                        <div class="row">
                        <!-- buttons -->
                            <a href="/teams/<%= team.id %>" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">Team Info</a>
                        </div>
                        <div class="row">
                        <!-- buttons -->
                            <a href="/matches/<%= team.id %>" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">Schedule</a>
                        </div>
                        <div class="row">
                        <!-- buttons -->
                        <% if(user.teamId) { %>
                            <% if(user.teamId == team.id) { %>                    
                            <a href="#" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">Announcements</a>
                            <% }; %>
                        <% } %>
                        </div>
                    </div>
                </div>
        
            </div>

</div>



<h1>announcement page</h1>


<a href="/teams/<%= team.id %>">Back</a>

<h2>Input:</h2>
    <input type="text" name="text">
    <input type="submit" value="Submit">
</form>

<div class="modal fade" id="addAnnouncementModal" tabindex="-1" role="dialog" aria-labelledby="addAnnouncementModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <form action="/teams/<%= user.teamId %>/announcements" method="POST">
    
                    <div class="modal-header">
                        <h5 class="modal-title" id="addAnnouncementModalTitle">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
    
                    <div class="modal-body">
                        <!-- <div class="col-8">   -->
                            <div class="form-group">
                                <label for="title" class="col-form-label">Title:</label>
                                <input type="text" class="form-control" name="title">
                            </div>
                            <div class="form-group">
                                <label for="content" class="col-form-label">Content</label>
                                <textarea class="form-control" name="content"></textarea>
                            </div>
                        <!-- </div> -->
                    </div>
    
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
    
                </form>
            </div>
        </div>
    </div>

    <!-- delete announcement Modal -->
<div class="modal fade" id="deleteAnnouncementModal" tabindex="-1" role="dialog" aria-labelledby="deleteAnnouncementModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <form action="/announcements/<%= user.teamId %>?_method=DELETE" method="POST">
                <div class="modal-header">
                <h5 class="modal-title" id="deleteAnnouncementModalTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body">
                    <span>Are you sure you want to delete?</span>
                </div>
                <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
          </div>
        </div>
      </div>


<%- include('../partials/footer') %>
