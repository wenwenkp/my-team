<%- include('../partials/header') %>

<div class="mx-auto mt-5 container" style="width: 800px;">
        <div class="row">
                <div class="col-3">
                    <% if(user.teamId) { %>
                    <% if(user.teamId == team.id) { %>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#leaveTeamModal">
                        Leave Team
                    </button> 
                    <% } %>
                    <% } %>
                </div>
                <div class="col-6">  
                </div>
                <div class="col-3">
                    <a href="/teams" class="btn btn-outline-dark" role="button" aria-pressed="true">Team List</a>
                </div>
            </div>
        
        <hr>

        <div class="container">
    
            <div class="row">
                <div class="col-8">  
                    <div class="row">                               
                        <h1>Profile</h1>
                    </div>
                    <div class="row">
                        Team Name: <%= team.name %>
                    </div>
                    <div class="row">
                        Team Found Date: <%= team.foundDate %>
                    </div>
                    <div class="row">
                        Team Manager: <%= team.leader %>
                    </div>
                    <div class="row">
                        Team Description: <%= team.description %>
                    </div>
                    <% if(user.isLeader) { %>
                        <% if(user.teamId === team.id) { %>
                    <div class="row">
                        <button type="button" class="btn btn-outline-dark" data-toggle="modal" data-target="#editTeamModal">
                            Edit Team Profile
                        </button>
                    </div>
                        <% }; %>
                    <% }; %>
                        
                </div>
                <div class="col-4">
                    <div class="row">
                    <!-- team logo -->
                        <img src="<%= user.avatar %>" alt="player avatar" class="self-avatar">
                    </div>
                    <div class="row">
                    <!-- buttons -->
                        <a href="/teams/<%= team.id %>" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">Team Info</a>
                    </div>
                    <div class="row">
                    <!-- buttons -->
                        <a href="#" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">Schedule</a>
                    </div>
                    <div class="row">
                    <!-- buttons -->
                        <a href="#" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">Announcements</a>
                    </div>
                </div>
            </div>

            <!-- players list -->
            <!-- need to set section as grid -->
            <section>
                    <% team.players.forEach((p)=>{ %>
                        <div class="card" style="width: 15rem;">
                            <img src="<%= p.avatar %>" class="card-img-top" alt="">
                            <div class="card-body">
                                <p class="card-text">
                                    <span class="card-text">
                                            <%= p.name %>
                                    </span>
                                    <span class="card-text">
                                        Favourite Position: <%= p.favPosition %>
                                    </span>
                                    <span class="card-text">
                                        <small class="text-muted">
                                            <% if(p.isLeader) { %>
                                                Leader
                                            <% } %>
                                        </small>
                                    </span>
                                </p>
                            </div>
                        </div>
                    <% }) %>
            </section>
    
        </div>
    </div>

    <% if(user.isLeader) { %>

<!-- post -->
    <% if(user.teamId === team.id) { %>
<form action="/teams/announcements/add" method="POST">
    Title: <input type="text" name="title">
    Content: <input type="text" name="content">
    <input type="submit" value="Create">
</form>

<!-- leave -->
<% if(user.teamId) { %>
    <form action="/players/leave?_method=PUT" method="POST">
        <button type="submit">Leave Team</button>
    </form>
    <% } %>

    <!-- add matches -->
<form action="/teams/matches/add" method="POST">
    With <br>
    Team: <input type="text" name="team">
    Time: <input type="datetime-local" name="time">
    Address: <input type="text" name="address">
    <input type="submit" value="Create">
</form>



    <% }; %>
<% }; %>



               

<% if(user.teamId === team.id) { %>
<h3>Team's Announcement:</h3>
<table>
    <thead>
        <th>Title</th>
        <th>Date</th>
        <th></th>
        <th></th>
    </thead>
    <tbody>
        <% team.announcements.forEach((post)=>{ %>
        <tr>
            <td><%= post.title %></td>
            <td><%= post.time %></td>
            <td><a href="/teams/announcements/<%= post.id %>">Details</a></td>
            <td>
                <% if(user.isLeader) { %>
                <form action="/teams/announcements/<%= post._id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="delete">
                </form>
                <% }; %>
            </td>
        </tr>
        <% }) %>

    </tbody>
</table>

<h3>Team Schedule</h3>
<table>
    <thead>
        <th>Team</th>
        <th>Date</th>
        <th>Address</th>
        <th></th>
    </thead>
    <tbody>
        <% team.matches.forEach((m)=>{ %>
        <tr>
            <td><%= m.team %></td>
            <td><%= m.time %></td>
            <td><%= m.address %></td>
            <td>
                <% if(user.isLeader) { %>
                <form action="/teams/matches/<%= m._id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="delete">
                </form>
                <% }; %>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>
<% } %>

<!-- Edit Team Modal -->
<div class="modal fade" id="editTeamModal" tabindex="-1" role="dialog" aria-labelledby="editTeamModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <form action="/teams/<%= user.teamId %>?_method=PUT" method="POST">
    
                    <div class="modal-header">
                        <h5 class="modal-title" id="editTeamModalTitle">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
    
                    <div class="modal-body">
                        <!-- <div class="col-8">   -->
                            <div class="form-group">
                                <label class="col-form-label">Description</label>
                                <textarea class="form-control" name="description"></textarea>
                            </div>
                            <!-- <div class="row">
                                Favourite Team: <input type="text" name="favTeam">
                            </div>
                            <div class="row">
                                Favourite Position: <input type="text" name="favPosition">
                            </div> -->
                        <!-- </div> -->
                    </div>
    
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
    
                </form>
            </div>
        </div>
    </div>

      
      <!-- Leave Team Modal -->
      <div class="modal fade" id="leaveTeamModal" tabindex="-1" role="dialog" aria-labelledby="leaveTeamModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <form action="/players/leave?_method=PUT" method="POST">
                <div class="modal-header">
                <h5 class="modal-title" id="leaveTeamModalTitle">Leave My Team</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body">
                Are you sure you want to leave?
                </div>
                <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-danger">Leave</button>
                </div>
            </form>
          </div>
        </div>
      </div>

<%- include('../partials/footer') %>
