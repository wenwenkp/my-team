<%- include('../partials/header') %>
<%- include('../partials/secondHeader') %>

    <!-- team info -->
    <div class="container">
        <div class="row">
            <div class="col-10">  
                <div class="row">                               
                    <h1>Profile</h1>
                </div>
                <div class="row">
                    Team Name: <%= team.name %>
                </div>
                <div class="row">
                    Team Found Date: <%= team.foundDate %>
                </div>
                <div class="row">
                    Team Manager: <%= team.leader %>
                </div>
                <div class="row">
                    Team Description: <%= team.description %>
                </div>
                <% if(user.isLeader) { %>
                    <% if(user.teamId === team.id) { %>
                <div class="row mt-5">
                    <button type="button" class="btn btn-outline-dark" data-toggle="modal" data-target="#editTeamModal">
                        Edit Team Profile
                    </button>
                </div>
                    <% }; %>
                <% }; %>
            </div>
            
<%- include('../partials/subNav') %>


        </div>

        <!-- players list -->
        <!-- need to set section as grid -->
        <section>
            <% team.players.forEach((p)=>{ %>
            <div class="card" style="width: 15rem;">
                <img src="<%= p.avatar %>" class="card-img-top" alt="">
                <div class="card-body">
                    <p class="card-text">
                        <span class="card-text">
                            <%= p.name %>
                        </span>
                        <span class="card-text">
                            Favourite Position: <%= p.favPosition %>
                        </span>
                        <span class="card-text">
                            <small class="text-muted">
                                <% if(p.isLeader) { %>
                                    Leader
                                <% } %>
                            </small>
                        </span>
                    </p>
                </div>
            </div>
            <% }) %>
        </section>
    </div>
</div>

<!-- Edit Team Modal -->
<div class="modal fade" id="editTeamModal" tabindex="-1" role="dialog" aria-labelledby="editTeamModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <form action="/teams/<%= user.teamId %>?_method=PUT" method="POST">
                <div class="modal-header">
                    <h5 class="modal-title" id="editTeamModalTitle">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="col-form-label">Description</label>
                        <textarea class="form-control" name="description"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
      
<!-- Leave Team Modal -->
<div class="modal fade" id="leaveTeamModal" tabindex="-1" role="dialog" aria-labelledby="leaveTeamModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <form action="/players/leave?_method=PUT" method="POST">
                <div class="modal-header">
                    <h5 class="modal-title" id="leaveTeamModalTitle">Leave My Team</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to leave?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Leave</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
