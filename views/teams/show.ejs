<%- include('../partials/header') %>

<div class="mx-auto mt-5 container" style="width: 800px;">

        <div class="container">
    
            <div class="row">
                <div class="col-8">  
                    <div class="row">                               
                        <h1>Profile</h1>
                    </div>
                    <div class="row">
                        Team Name: <%= team.name %>
                    </div>
                    <div class="row">
                        Team Found Date: <%= team.foundDate %>
                    </div>
                    <div class="row">
                        Team Manager: <%= team.leader %>
                    </div>
                    <div class="row">
                        Favourite Position: <%= user.favPosition %>
                    </div>
                    <div class="row">
                        <button type="button" class="btn btn-outline-dark" data-toggle="modal" data-target="#exampleModalCenter">
                            Edit Profile
                        </button>
                    </div>
                    <div class="row">
                        <% if(user.teamId !== '') {%>
                            <a href="/teams/<%= user.teamId %>">Check My Team</a>
                        <% } %>  
                    </div>
                </div>
                <div class="col-4">
                    <img src="<%= user.avatar %>" alt="player avatar" class="self-avatar">
                </div>
            </div>
    
        </div>
    </div>

<% if(user.isLeader) { %>
    <% if(user.teamId === team.id) { %>
<form action="/teams/announcements/add" method="POST">
    Title: <input type="text" name="title">
    Content: <input type="text" name="content">
    <input type="submit" value="Create">
</form>

<% if(user.teamId) { %>
    <form action="/players/leave?_method=PUT" method="POST">
        <button type="submit">Leave Team</button>
    </form>
    <% } %>

<form action="/teams/matches/add" method="POST">
    With <br>
    Team: <input type="text" name="team">
    Time: <input type="datetime-local" name="time">
    Address: <input type="text" name="address">
    <input type="submit" value="Create">
</form>
<button>
    <a href="/teams/edit">Edit Description</a>
</button>
    <% }; %>
<% }; %>
<button>
    <a href="/teams">Back</a>
</button>
<br>

Team Name: <%= team.name %>
<br>
Team Found Date: <%= team.foundDate %>
<br>
Team Manager: <%= team.leader %>
<br>
Team Description: <%= team.description %>


<br>
Team players
<table>
    <thead>
        <th>Name</th>
        <th>Position</th>
        <th>Picture</th>
        <th></th>
    </thead>
    <tbody>
    <% team.players.forEach((p)=>{ %>
        <tr>
            <td><%= p.name %></td>
            <td><%= p.favPosition %></td>
            <td><img src="<%= p.avatar %>" alt="player avatar" class="p-avatar"></td>
            <td>
                <% if(p.isLeader) { %>
                    Leader
                <% } %>
            </td>
        </tr>
    <% }) %>
    </tbody>
</table>                

<% if(user.teamId === team.id) { %>
<h3>Team's Announcement:</h3>
<table>
    <thead>
        <th>Title</th>
        <th>Date</th>
        <th></th>
        <th></th>
    </thead>
    <tbody>
        <% team.announcements.forEach((post)=>{ %>
        <tr>
            <td><%= post.title %></td>
            <td><%= post.time %></td>
            <td><a href="/teams/announcements/<%= post.id %>">Details</a></td>
            <td>
                <% if(user.isLeader) { %>
                <form action="/teams/announcements/<%= post._id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="delete">
                </form>
                <% }; %>
            </td>
        </tr>
        <% }) %>

    </tbody>
</table>

<h3>Team Schedule</h3>
<table>
    <thead>
        <th>Team</th>
        <th>Date</th>
        <th>Address</th>
        <th></th>
    </thead>
    <tbody>
        <% team.matches.forEach((m)=>{ %>
        <tr>
            <td><%= m.team %></td>
            <td><%= m.time %></td>
            <td><%= m.address %></td>
            <td>
                <% if(user.isLeader) { %>
                <form action="/teams/matches/<%= m._id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="delete">
                </form>
                <% }; %>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>
<% } %>

<%- include('../partials/footer') %>
