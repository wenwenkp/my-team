<%- include('../partials/header') %>

<% if(user.isLeader) { %>
    <form action="/teams/announcements/add" method="POST">
        Title: <input type="text" name="title">
        Content: <input type="text" name="content">
        <input type="submit" value="Create">
    </form>
<% }; %>

Team Name: <%= team.name %>
<br>
Team Found Date: <%= team.foundDate %>
<br>
Team Manager: <%= team.leader %>
<br>
Team players: 
<table>
    <thead>
        <th>Name</th>
        <th>Position</th>
        <th>Picture</th>
        <th></th>
    </thead>
    <tbody>
    <% team.players.forEach((p)=>{ %>
        <tr>
            <td><%= p.name %></td>
            <td><%= p.favPosition %></td>
            <td><img src="<%= p.avatar %>" alt="player avatar" class="p-avatar"></td>
            <td>
                <% if(p.isLeader) { %>
                    Leader
                <% } %>
            </td>
        </tr>
    <% }) %>
    </tbody>
</table>                

<h3>Team's Announcement:</h3>
<table>
    <thead>
        <th>Title</th>
        <th>Date</th>
    </thead>
    <tbody>
        <% team.announcements.forEach((post)=>{ %>
        <tr>
            <td><%= post.title %></td>
            <td><%= post.time %></td>
        </tr>
        <tr>
            <td><%= post.content %></td>
        </tr>
        <% }) %>

    </tbody>
</table>

<%- include('../partials/footer') %>
