<%- include('../partials/header') %>

<table>
    <thead>
        <th>Team Name</th>
        <th>Found Date</th>
        <th>Manager</th>
        <th>Join?</th>
    </thead>
    <tbody>
<% teams.forEach((team)=>{ %>
        <tr>
            <td><%= team.name %></td>
            <td><%= team.foundDate %></td>
            <td><%= team.leader %></td>
            <td>
                <form action="/members/join?_method=PUT" method="POST">
                    <input type="text" name="teamId" value="<%= team.id %>" hidden>
                    <input type="submit" value="Join">
                </form>
            </td>
        </tr>
<% }) %>
    </tbody>
</table>
    

<%- include('../partials/footer') %>
