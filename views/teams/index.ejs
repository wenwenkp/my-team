<%- include('../partials/header') %>

<div class="mx-auto mt-5 container" style="width: 800px;">
    <div class="row">
        <div class="col-9">  
        </div>
        <div class="col-3">
            <% if(!user.teamId){ %>
                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#createTeamModal">Create My Team</button>
            <% }; %>
        </div>
    </div>

    <hr>
    <!-- <div class="table-responsive"> -->
        <table class="table">
            <thead class="thead-light">
                <tr>
                <th scope="col">#</th>
                <th scope="col">First</th>
                <th scope="col">Last</th>
                <th scope="col">Handle</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                <th scope="row">1</th>
                <td>Mark</td>
                <td>Otto</td>
                <td>@mdo</td>
                </tr>
                <tr>
                <th scope="row">2</th>
                <td>Jacob</td>
                <td>Thornton</td>
                <td>@fat</td>
                </tr>
                <tr>
                <th scope="row">3</th>
                <td>Larry</td>
                <td>the Bird</td>
                <td>@twitter</td>
                </tr>
            </tbody>
        </table>
    <!-- </div> -->
</div>

<table>
    <thead>
        <th>Team Name</th>
        <th>Leader</th>
        <th>Found Date</th>
        <th></th>
    </thead>
    <tbody>
    <% teams.forEach((team)=>{ %>
        <tr>
            <td><a href="/teams/<%= team.id %>"><%= team.name %></a></td>
            <td><%= team.leader %></td>
            <td><%= team.foundDate %></td>
            <td>
                <% if(!user.teamId){ %>
                <form action="/players/join?_method=PUT" method="POST">
                    <input type="text" name="teamId" value="<%= team.id %>" hidden>
                    <input type="submit" value="Join">
                </form>
                <% } %>
            </td>
        </tr>
    <% })%>
    </tbody>
</table>


<%- include('../partials/footer') %>



<div class="modal fade" id="createTeamModal" tabindex="-1" role="dialog" aria-labelledby="createTeamModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">

    <div class="modal-content">
        <form action="/teams" method="POST">

            <div class="modal-header">
                <h5 class="modal-title" id="createTeamModalLabel">New Team</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    <label class="col-form-label">Name:</label>
                    <input type="text" class="form-control" name="name">
                </div>
                <div class="form-group">
                    <label class="col-form-label">Description</label>
                    <textarea class="form-control" name="description"></textarea>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>

    </div>
  </div>
</div>