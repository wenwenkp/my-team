<%- include('../partials/header') %>

<div class="mx-auto mt-5 container" style="width: 800px;">
    <div class="row">
        <div class="col-9">  
        </div>
        <div class="col-3">
            <% if(!user.teamId){ %>
                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#createTeamModal">Create My Team</button>
            <% }; %>
        </div>
    </div>

    <hr>
    
    <div class="container">
        <!-- need to set section as grid -->
        <section>
            <% teams.forEach((team)=>{ %>
            <div class="card" style="width: 15rem;">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                    <h4 class="card-title"><%= team.name %></h4>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        Leader: 
                        <%= team.leader %>
                    </li>
                    <li class="list-group-item">
                        Found Date: 
                        <%= team.foundDate %>
                    </li>
                </ul>
                <div class="card-body">                
                    <a href="/teams/<%= team.id %>" class="btn btn-primary">Go Check</a>
                    <% if(!user.teamId){ %>
                    <form action="/players/join?_method=PUT" method="POST">
                        <input type="text" name="teamId" value="<%= team.id %>" hidden>
                        <button type="submit" class="btn btn-success">Join</button>
                    </form>
                    <% } %>
                </div>
            </div>
            <% })%>
        </section>
    </div>

</div>



<%- include('../partials/footer') %>



<div class="modal fade" id="createTeamModal" tabindex="-1" role="dialog" aria-labelledby="createTeamModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">

    <div class="modal-content">
        <form action="/teams" method="POST">

            <div class="modal-header">
                <h5 class="modal-title" id="createTeamModalLabel">New Team</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    <label class="col-form-label">Name:</label>
                    <input type="text" class="form-control" name="name">
                </div>
                <div class="form-group">
                    <label class="col-form-label">Description</label>
                    <textarea class="form-control" name="description"></textarea>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>

    </div>
  </div>
</div>