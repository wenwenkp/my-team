<%- include('../partials/header') %>

<% if(!user.teamId){ %>
<button>
    <a href="/teams/new">Create Team</a>
</button>
<% }; %>

<table>
    <thead>
        <th>Team Name</th>
        <th>Leader</th>
        <th>Found Date</th>
        <th></th>
    </thead>
    <tbody>
    <% teams.forEach((team)=>{ %>
        <tr>
            <td><a href="/teams/<%= team.id %>"><%= team.name %></a></td>
            <td><%= team.leader %></td>
            <td><%= team.foundDate %></td>
            <td>
                <% if(!user.teamId){ %>
                <form action="/players/join?_method=PUT" method="POST">
                    <input type="text" name="teamId" value="<%= team.id %>" hidden>
                    <input type="submit" value="Join">
                </form>
                <% } %>
            </td>
        </tr>
    <% })%>
    </tbody>
</table>

<%- include('../partials/footer') %>
