<%- include('../partials/header') %>

<div class="mx-auto mt-5 container" style="width: 800px;">
    <div class="row">
        <div class="col-9">  
        </div>
        <div class="col-3">
            <% if(!user.teamId){ %>
                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#createTeamModal">Create My Team</button>
            <% }; %>
        </div>
    </div>

    <hr>
    
    <div class="container">
        <!-- need to set section as grid -->
        <section>
            <% teams.forEach((team)=>{ %>
            <div class="card" style="width: 12rem;">
                <img src="<%= team.logo %>" class="card-img-top team-avatar" alt="team logo">
                <div class="card-body">
                <ul>
                    <li class="no-style">
                    <h5 class="card-title no-pad"><%= team.name %></h5>

                    </li>
                    <li class="no-style">
                        Leader: 
                        <%= team.leader %>
                    </li>
                    <li class="no-style">
                        Found Date: 
                        <%= team.foundDate %>
                    </li>
            <li class="no-style">

                    <a href="/teams/<%= team.id %>" class="btn btn-outline-dark">Go Check</a>
                </li>
                <li class="no-style">

                    <% if(!user.teamId){ %>
                    <form action="/players/join?_method=PUT" method="POST">
                        <input type="text" name="teamId" value="<%= team.id %>" hidden>
                        <button type="submit" class="btn btn-success">Join</button>
                    </form>
                    <% } %>
                </li>

                </ul>
            </div>

            </div>
            <% })%>
        </section>
    </div>

</div>



<%- include('../partials/footer') %>



<div class="modal fade" id="createTeamModal" tabindex="-1" role="dialog" aria-labelledby="createTeamModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">

    <div class="modal-content">
        <form action="/teams" method="POST">

            <div class="modal-header">
                <h5 class="modal-title" id="createTeamModalLabel">New Team</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    <label class="col-form-label">Name:</label>
                    <input type="text" class="form-control" name="name">
                </div>
                <div class="form-group">
                    <label class="col-form-label">Location:</label>
                    <input type="text" class="form-control" name="location">
                </div>
                <div class="form-group">
                    <label class="col-form-label">Description</label>
                    <textarea class="form-control" name="description"></textarea>
                </div>
                <div class="form-group">
                    <div class="row justify-content-center">
                        <div class="col-4">
                            <img src="/images/team-logo-1.png" alt="team logo" width="100px;">
                        </div>
                        <div class="col-4">
                            <img src="/images/team-logo-2.png" alt="team logo" width="100px;">
                        </div>
                        <div class="col-4">
                            <img src="/images/team-logo-3.png" alt="team logo" width="100px;">
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-4 mx-auto">
                            <input type="radio" name="logo" value="/images/team-logo-1.png">
                        </div>
                        <div class="col-4">
                            <input type="radio" name="logo" value="/images/team-logo-2.png">
                        </div>
                        <div class="col-4">
                            <input type="radio" name="logo" value="/images/team-logo-3.png">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <img src="/images/team-logo-4.png" alt="team logo" width="100px;">
                        </div>
                        <div class="col-4">
                            <img src="/images/team-logo-5.png" alt="team logo" width="100px;">
                        </div>
                        <div class="col-4">
                            <img src="/images/team-logo-6.png" alt="team logo" width="100px;">
                        </div>
                        <div class="col-4">
                            <input type="radio" name="logo" value="/images/team-logo-4.png">
                        </div>
                        <div class="col-4">
                            <input type="radio" name="logo" value="/images/team-logo-5.png">
                        </div>
                        <div class="col-4">
                            <input type="radio" name="logo" value="/images/team-logo-6.png">
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>

    </div>
  </div>
</div>