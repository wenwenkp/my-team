<%- include('../partials/header') %>

<h1>player main page</h1>

<section>
    <div>
        Player: <img src="<%= player.avatar %>" alt="player avatar" class="avatar">
    </div>
    <div>
        Name: <%= player.name %>
    </div>
    <div>
        Favourite Team: <%= player.favTeam %>
    </div>
    <div>
        Favourite Position: <%= player.favPosition %>
    </div>
    <% if(player.isLeader) { %>
    <div>
        Title: Manager of <%= team.name %>
    </div>
    <% }; %>
    <% if(!player.teamId) { %>
    <div>
        <a href="/players/team/new">Create Team</a>
    </div>
    <% }; %>
    <div>
        <a href="/players/<%= player.id %>">Edit Info</a>
    </div>
</section>
<hr>
<div>
        Team Name: <%= team.name %>
        <br>
        Team Manager: <%= team.leader %>
        <br>
        Teammates: 
        <% team.players.forEach((p)=>{ %>
            <%= p.name %>,
        <% }) %>
        <br>
        Found Date: <%= team.foundDate %>
        <br>
        
        <form action="/players/leave?_method=PUT" method="POST">
            <button type="submit">Leave Team</button>
        </form>
</div>

<%- include('../partials/footer') %>

