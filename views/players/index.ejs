<%- include('../partials/header') %>

<div class="mx-auto mt-5 container" style="width: 800px;">

    <div class="container">

        <div class="row">
            <div class="col-8">  
                <div class="row">                               
                    <h1>Profile</h1>
                </div>
                <div class="row">
                        Name: <%= user.name %>
                </div>
                <div class="row">
                        Email: 
                </div>
                <div class="row">
                    Favourite Team: <%= user.favTeam %>
                </div>
                <div class="row">
                    Favourite Position: <%= user.favPosition %>
                </div>
                <div class="row mt-5">
                    <button type="button" class="btn btn-outline-dark mr-5" data-toggle="modal" data-target="#exampleModalCenter">
                        Edit Profile
                    </button>
                    <% if(user.teamId !== '') {%>
                        <a href="/teams/<%= user.teamId %>" class="btn btn-outline-dark" role="button" aria-pressed="true">
                            See My Team
                        </a>
                    <% } %>  
                </div>
            </div>
            <div class="col-4">
                <img src="<%= user.avatar %>" alt="player avatar" class="self-avatar">
            </div>
        </div>

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <form action="/players?_method=PUT" method="POST">

                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                        <div class="form-group">
                            <label for="favourite-team" class="col-form-label">Favourite Team:</label>
                            <input type="text" class="form-control" name="favTeam">
                        </div>
                        <div class="form-group">
                            <label for="favourite-position" class="col-form-label">Favourite Position</label>
                            <input class="form-control" name="favPosition"></textarea>
                        </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>

            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>

