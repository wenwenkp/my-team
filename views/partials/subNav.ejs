<div class="col-2">
        <div class="row d-flex justify-content-end">
        <!-- team logo -->
            <img src="<%= team.logo %>" alt="team avatar" class="team-avatar">
        </div>
        <div class="row d-flex justify-content-end">
        <!-- buttons -->
            <a href="/teams/<%= team.id %>" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">
                Team Info
            </a>
        </div>
        <div class="row d-flex justify-content-end">
        <!-- buttons -->
            <a href="/matches/<%= team.id %>" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">
                Schedule
            </a>
        </div>
        <div class="row d-flex justify-content-end">
        <!-- buttons -->
        <% if(user.teamId) { %>
            <% if(user.teamId == team.id) { %>                    
            <a href="/announcements/<%= team.id %>" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">
                Announcements
            </a>
            <% } %>
        <% } %>
        </div>
    </div>