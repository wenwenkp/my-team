<%- include('../partials/secondP') %>

<div class="mx-auto mt-5 container" style="width: 900px;">
    <main class="news-main">
        <% newsData.forEach((news)=>{ %>
        <section class="news">
            <div class="info">
                <h5><a href="<%= news.url %>"><%= news.title %></a></h5>
                <small class="text-muted">Source: <%= news.source.name %></small><br>
                <small class="text-muted"><%= news.publishedAt %></small>
            </div>
            <div>
                <a href="<%= news.url %>"><img src="<%= news.urlToImage %>" alt="image" class="news-img"></a>
            </div>
        </section>
        <% }) %>
    </main>
</div>

<%- include('../partials/footer') %>