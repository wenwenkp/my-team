<%- include('./partials/header') %>

<div class="mx-auto mt-5" style="width: 800px; text-align: right">
    <div class="card bg-dark text-white">
        <img src="/images/background.jpg" class="card-img" alt="...">
        <div class="card-img-overlay">
            <% if (!user) { %>
            <button type="button" class="btn btn-warning btn-lg home-btn" data-toggle="modal" data-target="#loginModal">
                Log In
            </button>
            <% } %>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="loginModalTitle">Login</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-auto">
                <a href="/auth/google" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Login
                    With Google</a>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-dark" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>